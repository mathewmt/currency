extend layout

block content
        .col-sm-9.text-left
          .row
            .col-sm-4
            .col-sm-4.text-center
              form(action='/deno_create', method='post')
                .form-group
                  .row(style='padding-bottom:15px;')
                    label.control-label.col-sm-2(for='email') Amount:
                    .col-sm-10
                      input(name='amount', type='text', required='true')
                  .row(style='padding-bottom:15px;')
                    label.control-label.col-sm-2(for='passord') Country:
                    .col-sm-10
                    if countrylist
                     select(id ="country" name="countryId")
                       each item in countrylist
                        option(value=item._id) #{item.countryname}
                    else
                      select(id ="country" name="countryId")
                        option(value="") NO VALUE
                            

                  .row
                    .control-label.col-sm-2
                    .col-sm-10
                      input.btn.btn-info(type='submit', value='Create')
            .col-sm-4
        .col-sm-1
    footer.container-fluid.text-center
      p Footer Text
